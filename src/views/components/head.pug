mixin metaData({title,description,image})
    meta(name="title",content=title ? title + " | Estilos & Dise単os WEM" : "Estilos & Dise単os WEM")
    meta(property="og:title",content=title)

    if description 
        meta(name="description",content=description)
        meta(property="og:description",content=description)
    if image
        meta(property="og:image",content=image)
        
    title #{title ? title + " | Estilos & Dise単os WEM" : "Estilos & Dise単os WEM"}

