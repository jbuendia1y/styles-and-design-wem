mixin metaData({title,description,image,keywords})
    meta(name="title",content=title ? title + " | Estilos & Diseños WEM" : "Estilos & Diseños WEM")
    meta(property="og:title",content=title ? title + " | Estilos & Diseños WEM" : "Estilos & Diseños WEM")

    if description 
        meta(name="description",content=description)
        meta(property="og:description",content=description)
    if image
        meta(property="og:image",content=image)
        meta(property="og:image:width",content="300px")
        meta(property="og:image:height",content="250px")

    if keywords 
        meta(name="keywords",content=keywords.toString())
        
    title #{title ? title + " | Estilos & Diseños WEM" : "Estilos & Diseños WEM"}

doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        link(rel="shortcut icon", href="/assets/images/logo.png", type="image/x-icon")

        style.
            @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap');

        link(rel="stylesheet", href="/css/styles.css")

        block head
    body 